<h1>Welcome!</h1>
<%= flash[:notice] %>

<% if current_user.nil? %>
	<%= link_to 'Login', login_path %> |
	<%= link_to 'Signup', signup_path %>

<% else %>
	<h2>You are logged in as: <%= session[:user_email] %></h2>

	<%= link_to 'Users', users_path %> |
	<%= link_to 'Logout', logout_path %>
<% end %>